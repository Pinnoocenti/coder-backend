<div>
    <h3>Agregar un nuevo producto</h3>

    <form action="/realtimeproducts" method="post" >
        <label >Titulo</label> <input type="text" name="title">
        <br>
        <br>
        <label >Descripción</label> <input type="text" name="description">
        <br>
        <br>
        <label >Precio</label> <input type="number" name="price">
        <br>
        <br>
        <label >Imagen</label> <input type="text" name="thumbnail">
        <br>
        <br>
        <label >Código</label> <input type="text" name="code">
        <br>
        <br>
        <label >Stock</label> <input type="number" name="stock">
        <br>
        <br>
        <label >Categoría</label> <input type="text" name="category">
        <br>
        <br>
        <label >Status</label> <input type="text" name="status">
        <br>
        <br>
        <label >Disponible </label> 
        <select name="available">
            <option >si</option>
            <option >no</option>
        </select>
        <br>
        <br>
        <button id="sendInfo">Agregar</button>
    </form>

    <div id="outputInfo"></div>
</div>



<script src="/socket.io/socket.io.js"></script>
